<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="NoAction" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="editTextStyle">@style/EditText</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="android:colorBackground">@android:color/widget_edittext_dark</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColorHint">@color/textHintColor</item>

    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/allura</item>
    </style>

    <style name="TextViewHome" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/allura</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:textViewStyle">@style/TextViewHome</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
</resources>
